{
  "manifest_version": 2,
  "name": "Just Win",
  "version": "1.0.4",

  "description": "Get told to just win on chess.com",

  "permissions": [
    "activeTab"
  ],

  "content_scripts": [
    {
      "matches": ["*://*.chess.com/*"],
      "js": ["justwin.js"]
    }
  ],

  "web_accessible_resources": [
    "justwin.mp3"
  ],

  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  }

}
